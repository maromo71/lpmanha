#include <stdio.h>

#define PI 3.1415
int main(void) {
    double raio;
    printf("Digite o valor do raio: \n");
    scanf("%lf", &raio);
    double area =  * raio * raio;
    printf("A area do circulo e: %.2lf\n", area);
    double perimetro = 2 * PI * raio;
    printf("O perimetro do circulo e: %.2lf\n", perimetro);
    return 0;
}